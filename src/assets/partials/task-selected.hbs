
<div class="task-details__item" data-task-id="{{id}}">
    <header class="task-details__header">
        {{#if image}}
            <img src="{{image}}" alt="" class="task-details__image" />
        {{/if}}

        <div class="task-details__meta">
            <h2 class="task-details__title">{{taskTitle}} </h2>

            <p class="task-details__priority">
                Priority: <span class="task__priority--{{priority}}"> {{priorityLabel}}</span>
            </p>
            <p class="task-details__status">
                Status: <span class="task__status--{{status}}"> {{statusLabel}}</span>
            </p>
            <p class="task-details__date">
                Created on: {{createdAtLabel}}
            </p>
        </div>
    </header>

    <div class="task-details__content">
        <p class="task-details__description">
            {{taskDescription}}
        </p>
    </div>

    <footer class="task-details__actions">
        <button 
            type="button"
            class="task-details__button task-details__button--completed"
            data-completed-task
            data-task-id="{{id}}">
